---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<input type="checkbox" id="menu-toggle" class="menu-toggle" />
		<label for="menu-toggle" class="menu-button" aria-label="Toggle menu">
			<span class="hamburger"></span>
		</label>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Transcripts</HeaderLink>
			<HeaderLink href="/glossary">Glossary</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<a href="https://opensanghafoundation.org/" target="_blank" rel="noopener noreferrer">Open Sangha</a>
			<a href="https://www.youtube.com/@DhammaratoDhamma" target="_blank" rel="noopener noreferrer">YouTube</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #fffcf7;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		border-bottom: 2px solid var(--accent);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.nav-links {
		display: flex;
		align-items: center;
	}
	.menu-toggle {
		display: none !important;
		position: absolute;
		opacity: 0;
		width: 0;
		height: 0;
	}
	.menu-button {
		display: none;
		cursor: pointer;
		padding: 0.5em;
	}
	.hamburger,
	.hamburger::before,
	.hamburger::after {
		display: block;
		width: 24px;
		height: 3px;
		background: rgb(var(--black));
		border-radius: 2px;
		transition: all 0.3s;
		position: relative;
	}
	.hamburger::before,
	.hamburger::after {
		content: '';
		position: absolute;
		left: 0;
	}
	.hamburger::before {
		top: -7px;
	}
	.hamburger::after {
		top: 7px;
	}

	@media (max-width: 720px) {
		.menu-button {
			display: block;
		}
		.nav-links {
			display: none;
			flex-direction: column;
			width: 100%;
			padding-bottom: 0.5em;
		}
		.nav-links a {
			width: 100%;
			padding: 0.6em 0;
			font-size: 0.95rem;
			border-bottom: none;
		}
		.menu-toggle:checked ~ .nav-links {
			display: flex;
		}
		/* Animate hamburger to X */
		.menu-toggle:checked ~ .menu-button .hamburger {
			background: transparent;
		}
		.menu-toggle:checked ~ .menu-button .hamburger::before {
			top: 0;
			transform: rotate(45deg);
		}
		.menu-toggle:checked ~ .menu-button .hamburger::after {
			top: 0;
			transform: rotate(-45deg);
		}
	}
</style>
